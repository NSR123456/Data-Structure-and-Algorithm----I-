#include<stdio.h>

void insert(int arr[],int pos, int x ) {
    int n = sizeof(arr)/sizeof(arr[0]);
    
    n++;
    for(int i= n-1; i >= pos; i--)
        arr[i] = arr[i-1];
    arr[pos-1] = x;
    printf("After Insertion:\n");
    for(int i=0;i<n;i++)
        printf("%d ", arr[i]);
    printf("\n");
}

void deleteElement(int arr[], int x) {
    int i;
    int n = sizeof(arr)/sizeof(arr[0]);
    for(i=0; i<n;i++)
        if(arr[i] == x) break;
    if(i<n) {
        n = n - 1;
        for(int j = i; j<n;j++)
            arr[j] = arr[j+1];
    }
    printf("After Deletion:\n");
    for(int j= 0;j<n;j++)
        printf("%d ",arr[j]);
    printf("\n");
}



int main()
{
    int array = {8, 64, 9, 56, 67, 64, 2, 16,3};
    insert(array, 6, 25);
    deleteElement(array, 9);
    
    
    return 0;
}

